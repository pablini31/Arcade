# Configuración del Servidor
PORT=3000
NODE_ENV=development

# Base de Datos MongoDB
MONGODB_URI=mongodb://localhost:27017/petventure
# Para MongoDB Atlas: mongodb+srv://usuario:password@cluster.mongodb.net/petventure

# JWT (JSON Web Token)
JWT_SECRET=tu_jwt_secret_super_seguro_y_largo_para_produccion
JWT_EXPIRES_IN=7d

# APIs Externas (Opcionales - para mejorar el juego)

# Pixabay API - Para imágenes de mascotas y fondos
# Obtener en: https://pixabay.com/api/docs/
PIXABAY_API_KEY=tu_pixabay_api_key

# Giphy API - Para animaciones y GIFs
# Obtener en: https://developers.giphy.com/
GIPHY_API_KEY=tu_giphy_api_key

# OpenWeather API - Para efectos climáticos
# Obtener en: https://openweathermap.org/api
OPENWEATHER_API_KEY=tu_openweather_api_key

# TinyPNG API - Para optimización de imágenes
# Obtener en: https://tinypng.com/developers
TINYPNG_API_KEY=tu_tinypng_api_key

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de Logs
LOG_LEVEL=info

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de Seguridad
BCRYPT_ROUNDS=12

# Configuración del Juego
GAME_UPDATE_INTERVAL=30000
GAME_STATS_DECAY_INTERVAL=60000 